{
  "entities": {
    "MaintenanceRequest": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "MaintenanceRequest",
      "type": "object",
      "description": "Represents a maintenance request for a POS machine.",
      "properties": {
        "machineId": {
          "type": "string",
          "description": "Reference to the PosMachine."
        },
        "customerName": {
          "type": "string"
        },
        "machineModel": {
          "type": "string"
        },
        "machineManufacturer": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "description": "Date and time the request was created.",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "description": "Current status of the request (e.g., 'Open', 'In Progress', 'Closed')."
        },
        "priority": {
          "type": "string",
          "description": "Priority of the request (e.g., 'High', 'Medium', 'Low')."
        },
        "technician": {
          "type": "string",
          "description": "Name of the assigned technician."
        }
      },
      "required": [
        "machineId",
        "customerName",
        "createdAt",
        "status",
        "priority"
      ]
    },
    "PosMachine": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "PosMachine",
      "type": "object",
      "description": "Represents a POS machine requiring maintenance.",
      "properties": {
        "serialNumber": {
          "type": "string"
        },
        "model": {
          "type": "string"
        },
        "manufacturer": {
          "type": "string"
        },
        "customerId": {
          "type": "string"
        }
      },
      "required": [
        "serialNumber",
        "model",
        "manufacturer",
        "customerId"
      ]
    },
    "Customer": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Customer",
      "type": "object",
      "description": "Represents a customer who owns POS machines.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the customer (e.g., CUST-1001)."
        },
        "name": {
          "type": "string",
          "description": "Full name of the customer."
        }
      },
      "required": [
        "id",
        "name"
      ]
    },
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the maintenance management system.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user."
        },
        "name": {
          "type": "string",
          "description": "Full name of the user."
        },
        "role": {
          "type": "string",
          "description": "User's role in the system (e.g., 'Technician', 'Manager')."
        }
      },
      "required": [
        "id",
        "name",
        "role"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "collections": [
      {
        "path": "/users/{userId}",
        "schema": {
          "$ref": "#/entities/User"
        },
        "description": "Stores user profiles."
      },
      {
        "path": "/customers/{customerId}",
        "schema": {
          "$ref": "#/entities/Customer"
        },
        "description": "Stores customer information."
      },
      {
        "path": "/posMachines/{machineId}",
        "schema": {
          "$ref": "#/entities/PosMachine"
        },
        "description": "Stores POS machine details."
      },
      {
        "path": "/maintenanceRequests/{requestId}",
        "schema": {
          "$ref": "#/entities/MaintenanceRequest"
        },
        "description": "Stores all maintenance requests."
      }
    ]
  }
}
